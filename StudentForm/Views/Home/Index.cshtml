@model IEnumerable<StudentForm.Models.DbModels.Student>

@{
    ViewData["Title"] = "Home Page";
}

<h4 class="text-center text-uppercase">List of Students</h4>

<p>
    <a asp-action="Create" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i> Add New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            
            <th>@Html.DisplayNameFor(model => model.Age)</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
        <tr>
            <td>
                <img src="~/images/@student.ProfilePicture"
                     class="rounded-circle"
                     height="40" width="40"
                     asp-append-version="true" />
                @student.Name
            </td>

            <td>@student.Age</td>
            <td>
                <a asp-action="Edit" asp-route-id="@student.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@student.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@student.Id">Delete</a>
            </td>

        </tr>

        }
    </tbody>
</table>  